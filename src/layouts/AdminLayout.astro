---
import '~/assets/styles/tailwind.css';

interface Props {
  title?: string;
}

const { title = 'Admin' } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>{title} - ABM Prospector Admin</title>
      <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    </head>
    <body class="bg-gray-50 dark:bg-gray-900">
      <div class="min-h-screen flex flex-col">
        <!-- Admin Header -->
        <header class="bg-white dark:bg-gray-800 shadow">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <a href="/admin" class="text-2xl font-bold text-blue-600 dark:text-blue-400">
                  ABM Prospector Admin
                </a>
                <nav class="hidden md:flex space-x-4">
                  <a href="/admin/articles" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">
                    Articles
                  </a>
                </nav>
              </div>
              <div id="clerk-user-button"></div>
            </div>
          </div>
        </header>

        <!-- Main Content -->
        <main class="flex-1 max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <slot />
        </main>

        <!-- Footer -->
        <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 text-center text-gray-600 dark:text-gray-400">
            <p>ABM Prospector Admin Panel</p>
          </div>
        </footer>
      </div>
    </body>
</html>
