---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Contact — Get Started with ABM Prospector',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Contact Us"
    title="Start Your ABM Prospector Transformation"
    subtitle="Whether you need qualified meetings now, want to train your team, or require strategic alignment—let's discuss how we can help."
  />

  <ContactUs
    id="form"
    title="Get in Touch"
    subtitle="Complete the form below or email us directly. We typically respond within 24 hours."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
      },
    ]}
    textarea={{
      label: 'How can we help you?',
      placeholder: 'Tell us about your ABM challenges, team needs, or goals...',
    }}
    disclaimer={{
      label:
        'By submitting this form, you agree to be contacted regarding ABM Prospector and services.',
    }}
    description="Our team responds within 24 business hours."
    webhookUrl="https://hook.eu1.make.com/6uo8q1jn29hn253xtxadi3ocp7el05ki"
  />

  <!-- Quick Actions -->
  <Features2
    title="Quick Actions"
    subtitle="Choose the path that's right for you"
    columns={2}
    items={[
      {
        title: 'Get Free Sample Report',
        description: 'Send us a target account and we\'ll show you our AI-powered intelligence in action. No obligation.',
        icon: 'tabler:file-analytics',
      },
      {
        title: 'Book Strategy Call',
        description: 'Schedule a 30-minute consultation to discuss your pipeline goals, current challenges, and how we can help.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Request Training Info',
        description: 'Get details about our ABM Prospector training programmes—public courses or in-house workshops.',
        icon: 'tabler:school',
      },
      {
        title: 'Explore myGTMplan',
        description: 'Learn how our one-page strategic planning workshop can align your revenue team.',
        icon: 'tabler:map',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>


  <!-- Final CTA -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Explore All Services',
        href: '/#features',
      },
    ]}
  >
    <Fragment slot="title">
      Not Sure Where to Start?
    </Fragment>

    <Fragment slot="subtitle">
      Return to the homepage to explore our complete ABM Prospector ecosystem: Intelligence & Outreach, Training, Strategic Planning, and AI Transformation.
    </Fragment>
  </CallToAction>
</Layout>
