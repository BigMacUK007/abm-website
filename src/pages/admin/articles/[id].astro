---
import AdminLayout from '~/layouts/AdminLayout.astro';
import ArticleEditorForm from '~/components/admin/ArticleEditorForm';

export const prerender = false;

// Check authentication
const { userId } = Astro.locals.auth();
if (!userId) {
  return Astro.redirect('/admin/login');
}

const { id } = Astro.params;
const isNew = id === 'new';

// eslint-disable-next-line @typescript-eslint/no-explicit-any
let article: any = null;
let error: string | null = null;

// Fetch article if editing existing
if (!isNew) {
  try {
    const db = Astro.locals.runtime.env.DB;
    const result = await db.prepare('SELECT * FROM articles WHERE id = ?').bind(id).first();

    if (!result) {
      error = 'Article not found';
    } else {
      article = result;
    }
  } catch (e) {
    console.error('Error fetching article:', e);
    error = 'Failed to load article';
  }
}
---

<AdminLayout title={isNew ? 'New Article' : 'Edit Article'}>
  <div class="max-w-5xl mx-auto">
    <div class="mb-6">
      <a
        href="/admin/articles"
        class="inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Articles
      </a>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
          {isNew ? 'Create New Article' : 'Edit Article'}
        </h1>
      </div>

      {error ? (
        <div class="p-6">
          <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
            <p class="text-red-700 dark:text-red-400">{error}</p>
          </div>
        </div>
      ) : (
        <ArticleEditorForm article={article} isNew={isNew} client:load />
      )}
    </div>
  </div>
</AdminLayout>
